@model ShoppingCart
@{
    ViewData["Title"] = "Details";
}


<div class="text-center my-5">
    <h2 class="display-4 mt-5">Product Info.</h2>
    @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>

<form method="post" asp-action="Details">
    <input hidden asp-for="@Model.ProductId" />
    <div class="card container p-1">

        <div class="card-header bg-success text-light m-lg-0 row mt-1">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.Product.Title</h1>
                <p class="text-black-50">by @Model.Product.Author</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="text-success badge bg-white pt-2" style="height:30px">@Model.Product.CoverType.Name</span>
                <span class="text-success badge bg-white pt-2" style="height:30px">@Model.Product.Category.Name</span>
            </div>
        </div>

        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">

                    <div class="col-8 col-lg-8">
                        <div class="row pl-2">
                            <h5 class="text-muted">ISBN : @Model.Product.ISBN</h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-muted pb-2">List Price : <strike>@Model.Product.ListPrice.ToString("c")</strike></h5>
                        </div>
                        <div class="row text-center pl-2 " style="color:white";>
                            <div class="p-1 col-2 bg-secondary border-bottom ">
                                <div>Quantity</div>
                            </div>
                             <div class="p-1 col-2 bg-secondary border-bottom ">
                                <div>1-5</div>
                            </div>
                             <div class="p-1 col-2 bg-secondary border-bottom ">
                                <div>5-10</div>
                            </div>
                             <div class="p-1 col-2 bg-secondary border-bottom ">
                                <div>+10</div>
                            </div>
                        </div>
                        <div class="row text-center pl-2" style="color:black; font-weight:bold;">
                            <div class="p-1 col-2 bg-secondary  ">
                                <div>Price</div>
                            </div>
                             <div class="p-1 col-2 bg-secondary  ">
                                <div>@Model.Product.Price.ToString("c")</div>
                            </div>
                             <div class="p-1 col-2 bg-secondary  ">
                                <div>@Model.Product.Price5.ToString("c")</div>
                            </div>
                             <div class="p-1 col-2 bg-secondary  ">
                                <div>@Model.Product.Price10.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row pl-2">
                            <p class="text-secondary">@Model.Product.Description</p>
                        </div>
                        <div class="row pl-2">
                            <div class="col-2 text-primary"><h4>Count</h4></div>
                            <div class="col-10"> <input  class="form-control" asp-for="Count"/> </div>
                        </div>

                    </div>

                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="~/Files/Images/@Model.Product.ImageUrl" width="100%" class="rounded"/>
                    </div>
                </div>
            </div>
        </div>






        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-secondary form-control"  style="height:50px" asp-action="index">Back To Home</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add To Cart"  class="btn btn-success form-control"  style="height:50px"  >Add To Cart</button>
                </div>
            </div>
        </div>
    </div>

</form>

