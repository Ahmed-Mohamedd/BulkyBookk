@model IEnumerable<BulkyBook.PL.ViewModels.ProductCardViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h1 class="display-4 mt-5">Welcome To Our BulkyBook</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row pb-3">
    @foreach(var product in Model)
    {
     
        <div class="col-lg-3 col-md-6">
            <div class=" row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba ; border-radius:5px;">
                    <div class="card">
                        <img src="~/Files/Images/@product.ImageName" class="card-img-top rounded" style="height:350px"/>
                    </div>
                    <div class="card-body" style="height:150px">
                        <div class="pl-1">
                            <p class=" pb-1 card-title h5 text-primary">@product.Title</p>
                            <p class="card-title  text-info">by &nbsp; @product.Author</p>
                        </div>
                        <div class="pl-1">
                            <p>List Price:<strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                        </div>
                        <div class="pl-1">
                            <p>As low As:<b>$@product.Price.ToString("0.00")</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">
                            Details
                        </a>
                    </div>
                </div>
            </div>

        </div>
    }
</>

