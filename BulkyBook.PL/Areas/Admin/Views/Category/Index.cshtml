@model IReadOnlyList<Category>
@{
    ViewData["Title"] = "Index";
}


<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a  asp-controller="Category" asp-action="Create" class="btn btn-outline-primary "> 
                <i class="bi bi-patch-plus"></i> &nbsp; Create New Category
                </a>
        </div>
    </div>
</div>

<br />
<br />

<table class="table table-bordered table-striped" style="width:100%">

    <thead >
        <tr>
            <th class="text-secondary">Category Name</th>
            <th class="text-secondary">Display Order</th>
            <th class="text-secondary"> Edit</th>
            <th class="text-secondary"> Delete</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td width="50%">@category.Name</td>
                <td width="30%">@category.DisplayOrder</td>
                <td><a asp-action="Edit"    asp-route-id="@category.CategoryId" class="btn btn-info"><i class="bi bi-pencil-square"></i> Edit</a></td>
                <td><a asp-action="Delete"  asp-route-id="@category.CategoryId" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</a></td>
            </tr>
        }
    </tbody>
</table>

