@model IEnumerable<CoverType>


@{

}


<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> CoverType List</h2>
        </div>
        <div class="col-6 text-end">
            <a  asp-controller="CoverType" asp-action="Create" class="btn btn-outline-primary "> 
                <i class="bi bi-patch-plus"></i> &nbsp; Create New CoverType
                </a>
        </div>
    </div>
</div>

<br />
<br />


<table class="table table-bordered table-striped " style="width:100%">

    <thead >
        <tr>
            <th class="text-secondary">Cover Type</th>
            <th class="text-secondary">Update</th>
            <th class="text-secondary">Delete</th>
          
        </tr>
    </thead>

    <tbody>
        @foreach(var coverType in Model)
        {
            <tr>
                <td width="50%">@coverType.Name</td>
                <td><a asp-action="Edit"    asp-route-id="@coverType.Id" class="btn btn-info"><i class="bi bi-pencil-square"></i> Edit</a></td>
                <td><a asp-action="Delete"  asp-route-id="@coverType.Id" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</a></td>
            </tr>
        }
    </tbody>
</table>


